{
  "compilerOptions": {
    "target": "ES2016", // Specify ECMAScript target version
    "module": "CommonJS", // Specify module code generation
    "outDir": "./dist", // Redirect output structure to the directory
    "rootDir": "./src", // Specify the root directory of input files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable compatibility with CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
    "resolveJsonModule": true, // Include modules imported with .json extension
    "sourceMap": true, // Generate corresponding '.map' file
    "baseUrl": ".", // Base directory to resolve non-relative module names
    "paths": {
      "@/*": [
        "src/*"
      ] // Define path mapping for cleaner imports
    }
  },
  "include": [
    "src/**/*"
  ], // Specifies the files to be included in compilation
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ] // Specifies files to be excluded
}